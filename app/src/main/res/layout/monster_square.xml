<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/rounded_square"
    android:backgroundTint="@color/brown_accent"
    android:gravity="center"
    android:minWidth="100dp"
    android:minHeight="100dp"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/monsterpediaSquare"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_square"
        android:backgroundTint="@color/offwhite_bg"
        android:src="@drawable/gwomp" />

    <TextView
        android:id="@+id/monsterNameSquareTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/offwhite_bg" />
</LinearLayout>
