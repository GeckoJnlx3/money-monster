<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/monsterItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/rounded_square"
    android:backgroundTint="@color/brown_accent"
    android:gravity="center"
    android:minWidth="100dp"
    android:minHeight="100dp"
    android:orientation="vertical"
    android:padding="8dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/monsterImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_square"
        android:backgroundTint="@color/offwhite_bg"
        android:src="@drawable/gwomp"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:id="@+id/monsterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/baloo_bhai"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/offwhite_bg" />
</LinearLayout>
