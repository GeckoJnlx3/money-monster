<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12sp"
    android:background="@color/offwhite_bg"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <TextView
        android:id="@+id/settingsHeaderTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhai"
        android:gravity="center"
        android:padding="20dp"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="@color/brown_header"
        android:textSize="48sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="12sp"
        android:background="@drawable/rounded_square"
        android:backgroundTint="@color/beige"
        android:orientation="vertical">

        <TextView
            android:id="@+id/expensesHeaderTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12sp"
            android:layout_marginTop="12sp"
            android:fontFamily="sans-serif"
            android:text="Goal Settings"
            android:textAlignment="viewStart"
            android:textColor="@color/brown_header"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/setTarget"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24sp"
                android:layout_marginRight="24sp"
                android:ems="10"
                android:hint="Set saving target"
                android:inputType="number" />

            <Button
                android:id="@+id/saveTargetBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24sp"
                android:backgroundTint="@color/brown_accent"
                android:fontFamily="@font/baloo_bhai"
                android:text="Save" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/setLimit"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24sp"
                android:layout_marginRight="24sp"
                android:ems="10"
                android:hint="Set expense limit"
                android:inputType="number" />

            <Button
                android:id="@+id/expenseLimitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24sp"
                android:backgroundTint="@color/brown_accent"
                android:fontFamily="@font/baloo_bhai"
                android:text="Save" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12sp"
            android:orientation="horizontal"
            android:paddingLeft="12sp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time Period"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/timeSpnr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12sp"
            android:orientation="horizontal"
            android:paddingLeft="12sp">

            <TextView
                android:id="@+id/SetCurrencyTxt"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Set Currency"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/currencySpnr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/expensesHeaderTv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12sp"
        android:layout_marginTop="24sp"
        android:layout_marginRight="12sp"
        android:fontFamily="sans-serif"
        android:text="Account"
        android:textAlignment="viewStart"
        android:textColor="@color/brown_header"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:background="@color/brown_accent"
        android:text="Login"
        android:textSize="16sp"
        android:visibility="gone" />


</LinearLayout>